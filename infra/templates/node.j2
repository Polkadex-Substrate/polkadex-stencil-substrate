[Unit]
Description=Polkadex Thea Node
After=network-online.target
Wants=network-online.target

[Service]
User=ubuntu
Group=ubuntu
ExecStart=/usr/local/bin/polkadex-stencil \
    --chain /etc/customSpecRaw.json \
    --rpc-cors=all \
    --validator \
    --bootnodes {{ bootnodes }} \
    --rpc-port=9945 \
    --telemetry-url 'wss://telemetry.polkadot.io/submit/ 0' \
    --name={{ inventory_hostname }} \
    -lthea=trace

Restart=on-failure

[Install]
WantedBy=multi-user.target
